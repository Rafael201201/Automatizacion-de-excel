# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================

# Puerto del servidor Node.js (Frontend + Bot)
PORT=3000

# Puerto del backend Python Flask
PYTHON_PORT=5000

# ============================================
# CONFIGURACIÓN N8N
# ============================================

# Habilitar integración con N8N
# true = Usa N8N para procesamiento inteligente
# false = Usa parser local básico
N8N_ENABLED=false

# URL del webhook de N8N
# Formato: http://localhost:5678/webhook/[nombre-del-workflow]
N8N_WEBHOOK_URL=http://localhost:5678/webhook/excel-bot

# Timeout para peticiones a N8N (milisegundos)
N8N_TIMEOUT=30000

# ============================================
# CONFIGURACIÓN DE ARCHIVOS
# ============================================

# Tamaño máximo de archivos (en bytes)
MAX_FILE_SIZE=16777216

# Tiempo de vida de archivos temporales (horas)
TEMP_FILE_LIFETIME=24

# ============================================
# ENTORNO
# ============================================

# Entorno de ejecución
# development | production
NODE_ENV=development

# ============================================
# SEGURIDAD (Opcional)
# ============================================

# Secret para sesiones (genera uno único para producción)
# SESSION_SECRET=tu-secret-key-aqui

# CORS Origins permitidos (separados por comas)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ============================================
# APIs EXTERNAS (Opcional)
# ============================================

# Si quieres usar IA directamente sin N8N
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# ============================================
# LOGGING
# ============================================

# Nivel de logging: error | warn | info | debug
LOG_LEVEL=info

# ============================================
# BASE DE DATOS (Futuro)
# ============================================

# Si implementas historial de conversaciones
# DATABASE_URL=postgresql://user:password@localhost:5432/excelbot
